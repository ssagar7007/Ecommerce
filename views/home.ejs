<%- include("partials/header"); %>

<div id="parent" style="display: flex; flex-wrap: wrap;" >
 
  
  <% products.forEach(function(product){ %>
      
    <div class="card card-border" style="flex: 1 0 21%;margin: 5px;" >
      <img class="card-img-top" src=<%= product.image %> width="150px" height ="200px" alt="product image">
      <div class="card-body">
        <h5 class="card-title"><%= product.name %></h5>
        <button class="btn btn-primary detail-btn" value=<%= product._id %> >Details</button>
      </div>
    </div>

  <% }) %>
 
</div>
<button id="load" >Load More</button>

